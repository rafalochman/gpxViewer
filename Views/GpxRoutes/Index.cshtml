@model IEnumerable<gpxViewer.Models.GpxRoute>

@{
    ViewBag.Title = "Index";
}

<h2 class="routesOperationsTitle">@gpxViewer.Resources.Resource.Routes</h2>

<table class="table">
    <tr>
        <th>
            @gpxViewer.Resources.Resource.Name
        </th>
        <th>
            @gpxViewer.Resources.Resource.Distance
        </th>
        <th>
            @gpxViewer.Resources.Resource.Time
        </th>
        <th>
            @gpxViewer.Resources.Resource.Elevation
        </th>
        <th>
            @gpxViewer.Resources.Resource.Date
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Distance)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Elevation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SentDate)
        </td>
        <td>
            @Html.ActionLink(@gpxViewer.Resources.Resource.Edit, "Edit", new { id=item.Id }) |
            @Html.ActionLink(@gpxViewer.Resources.Resource.Details, "Details", new { id=item.Id }) |
            @Html.ActionLink(@gpxViewer.Resources.Resource.Delete, "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
