@{
    ViewBag.Title = "Home Page";
}

<div class="row" id="mainRow">
    <div class="col-lg-4">
        <form method="post" enctype="multipart/form-data" asp-controller="Data" asp-action="ImportAdditionalCodes">
            <div id="uploadFileDiv" class="form-group">
                <label id="chooseFile" for="chooseInput" class="btn btn-primary"> ChooseFile </label>
                <input accept='.gpx' id="chooseInput" type="file" name="file" style="display: none">
                <label class="bold" id="fileNameLabel"></label>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value=" Send">
                <div class="bold" id="tempData">@TempData["Message"]</div>
            </div>
        </form>

        <p id="chooseMap" class="bold"> ChooseMap </p>
        <p id="dropDownList">@Html.DropDownList("maps", null, new { onchange = "selectedMap(this.value)", @class = "form-control" })</p>

        <div id="jsPrint" class="form-group">
            <p class="bold">  Name: <div class="inline" id="name"></div></p>
            <p class="bold">  Distance: <div class="inline" id="distance"> </div></p>
            <p class="bold">  Time: <div class="inline" id="time"></div></p>
            <p class="bold">  Elevation: <div class="inline" id="elevation"></div></p>
        </div>
    </div>

    <div class="col-lg-8">
        <div id="bingMap" style="width:750px;height:550px; display:block"></div>
        <div id="googleMap" style="width:750px; height:550px;  display:none"></div>
        <div id="openStreetMap" style="width:750px;height:550px; display:none"></div>
    </div>

    <div class="col-lg-12" id="chartDiv"><canvas id="elevationChart" style="width:100%; height:182px;"></canvas></div>
</div>