<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/mapFavicon.ico" rel="shortcut icon" />
    <title>@ViewBag.Title - gpxViewer</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("gpxViewer", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(@gpxViewer.Resources.Resource.Home, "Index", "Home")</li>
                    <li>@Html.ActionLink(@gpxViewer.Resources.Resource.Routes, "Index", "GpxRoutes")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="col-lg-6">
                &copy; @DateTime.Now.Year - gpxViewer
            </div>
            <div class="col-lg-6">
                <ul class="list-inline text-right">
                    <li>@Html.ActionLink("English", "Change", "Language", new { language = "en", returnUrl = Request.Url.AbsoluteUri }, null)</li>
                    <li>@Html.ActionLink("Polski", "Change", "Language", new { language = "pl", returnUrl = Request.Url.AbsoluteUri }, null)</li>
                </ul>
            </div>
        </footer>

        <div class="cookieContainer">
            <p>
                <button type="button" class="close cookieButton">&times;</button>
                @gpxViewer.Resources.Resource.Cookies <a href="#">@gpxViewer.Resources.Resource.CookiesUse</a>.
            </p>
        </div>

    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
